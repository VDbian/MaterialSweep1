<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:divider="@drawable/shape_linearlayout_mid_v"
        android:showDividers="middle"
        >

        <TextView
            android:id="@+id/textView_tarr_name"
            android:layout_width="196px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16px"
            android:ellipsize="marquee"
            android:gravity="center"
            android:text="@string/tarr_name"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="32px"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/textView_unit"
            android:layout_width="96px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:text="@string/unit"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textSize="32px"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/textView_spec"
            android:layout_width="126px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/spec"
            android:textColor="@color/colorBlack"
            android:textSize="32px"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/textView_batch"
            android:layout_width="196px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/batch"
            android:textColor="@color/colorBlack"
            android:textSize="32px"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/textView_out_count"
            android:layout_width="96px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/out_count"
            android:textColor="@color/colorBlack"
            android:textSize="32px"
            android:typeface="serif"/>
    </LinearLayout>
</LinearLayout>